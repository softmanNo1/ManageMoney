<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/guide_bg" >

    <android.support.v4.view.ViewPager
        android:id="@+id/guide_view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/guide_button" >
    </android.support.v4.view.ViewPager>

    <Button
        android:id="@+id/guide_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/guide_ll"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/size_19"
        android:background="@drawable/guide_btn"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/guide_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/size_20"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/guide_iv_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_3"
            android:background="@drawable/guide_on"
            android:contentDescription="TODO" />

        <ImageView
            android:id="@+id/guide_iv_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_3"
            android:background="@drawable/guide_off" />

        <ImageView
            android:id="@+id/guide_iv_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_3"
            android:background="@drawable/guide_off" />
    </LinearLayout>

</RelativeLayout>